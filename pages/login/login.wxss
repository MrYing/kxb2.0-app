/* login.wxss */
/*
* #000000 主要内容、标题字色
* #888888 次要信息字色
* #353535 大段的说明且属于主要内容
* #bfbfbf 暗提示色
* #f4333c 错误、警示色
* #ff5b05 重点提醒色
* #f5f5f9 app底色
* #3FBE69 app主题色
*/
page {
  height: 100%;
}

.page {
  height: 100%;
  position: relative;
}

image {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
}

.form-area {
  position: absolute;
  z-index: 10;
  top: 95px;
  width: 100%;
}
.title{
  margin-bottom:20px
}

.input-box {
  background-color: rgba(255, 255, 255, 0.3);
  padding: 40rpx 0;
  margin-bottom: 1px;
}

input {
  padding-left: 100rpx;
  color: #e8e8e8;
  font-size: 14pt;
}

.placeholder {
  color: #aaa;
  font-size: 13pt;
}

.h1{
  color: #fff;
  text-align: center;
}
.h1 {
  font-size: 17pt;
  font-weight:bold
}
.weui-btn{
  background-color: #406880;
  color:#fff;
  border-radius: 2px;
}
