<!--person_info.wxml-->
<view class="page">
    <view class="page__bd">
        <view class="weui-flex info-user-wrap">
            <view class="info-avatar-wrap">
                 <image class="info-avatar-img" src="{{PHOTO}}" mode="aspectFit" binderror="onImageError"  /> 
            </view>
            <view class="info-user-desc">
                <view class="info-user-name">{{USER_NAME}}</view>
                <view class="info-user-dept">{{parentDept+dept}}</view>
            </view>
        </view>
        <view class="weui-cells__title info-rank">考试成绩</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell" wx:for="{{userScore}}" wx:key="fl_id">
                <view class="weui-cell__bd">{{item.tkmc}}</view>
                <view class="weui-cell__ft">积分：{{item.score}}</view>
            </view>
        </view>

    </view>
</view>