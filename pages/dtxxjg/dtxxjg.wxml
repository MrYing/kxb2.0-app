<!-- 答题学习结果 -->
<view class="page">
    <view class="page__bd">
        <view class="weui-cells__title">本次学习成绩</view>
        <view class="weui-cells weui-cells_after-title no-br">
            <view class="weui-cell">
                <view class="weui-cell__bd label">总答题数：</view>
                <view class="weui-cell__bd">{{counts}}</view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd label">得分：</view>
                <view class="weui-cell__bd">{{score}}</view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd">正确题数：</view>
                <view class="weui-cell__bd">{{rightCount}}</view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd">错误题数：</view>
                <view class="weui-cell__bd">{{wrongCount}}</view>
            </view>
            <view class="weui-btn-area">
                <button class="weui-btn" type="primary" bindtap="bindback">确定</button>
            </view>
        </view>
    </view>
</view>